<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="courseoverviewsystem.cos.CreateCourse"
          prefHeight="330.0" prefWidth="430" vgap="10" hgap="10" >


    <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2">
        <Text text="Course info"/>

        <TextField text="Name" fx:id="name"/>
        <TextField text="Description"  fx:id="description"/>
        <TextArea text="Additional info(ex. notes)" fx:id="notes" prefWidth="200" prefHeight="200" />

    </VBox>

    <VBox spacing="10" GridPane.columnIndex="4" GridPane.rowIndex="1" prefHeight="150">
        <Text text="Start date:" />
        <DatePicker fx:id="dateStart"  />
        <HBox spacing="10">
            <Label text="Time:"/>
            <TextField fx:id="startH" text="hh" prefWidth="35" prefHeight="15"/>
            <TextField fx:id="startM" text="mm" prefWidth="35" prefHeight="15"/>
        </HBox>

        <Text text="Deadline:" />
        <DatePicker fx:id="dateEnd" />
        <HBox spacing="10">
            <Label text="Time:"/>
            <TextField fx:id="endH" text="hh" prefWidth="35" prefHeight="15" />
            <TextField fx:id="endM" text="mm" prefWidth="35" prefHeight="15"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Priority:"/>
            <TextField fx:id="priority" text="0" prefWidth="35" prefHeight="15"/>
        </HBox>
        <HBox spacing="10">
            <Label text="value:"/>
            <TextField fx:id="value" text="0" prefWidth="35" prefHeight="15"/>
        </HBox>
    </VBox>

    <Button fx:id="save" text="Save" onAction="#saveCourse" GridPane.columnIndex="4" GridPane.rowIndex="2" prefWidth="70"
            GridPane.valignment="BOTTOM" GridPane.halignment="RIGHT"/>


</GridPane>
