<?xml version="1.0" encoding="UTF-8"?>


<?import com.sun.javafx.scene.control.IntegerField?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="courseoverviewsystem.cos.StudySettings"
            prefHeight="400.0" prefWidth="600.0" >
    <padding>
        <Insets bottom="30" right="30" left="30"
                top="30"/>

    </padding>


    <left>
        <VBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">

            <CheckBox text="Show current time"/>
            <CheckBox text="Show worktime"/>
            <CheckBox text="Show breaktime"/>

        </VBox>

    </left>

    <right>
        <VBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="3">
               <HBox>
                   <Label text="Worktime in hours : "/>
                   <TextField fx:id="workTH" prefWidth="30" prefHeight="15"/>
                   <Label text=" minutes : "/>
                   <TextField fx:id="workTM" prefWidth="30" prefHeight="15"/>
               </HBox>

            <HBox>
                <Label text="Breaktime in hours : "/>
                <TextField fx:id="breakTH" prefWidth="30" prefHeight="15"/>
                <Label text=" minutes : "/>
                <TextField fx:id="breakTM" prefWidth="30" prefHeight="15"/>
            </HBox>
                <HBox>
                    <Label text="Cycles :" />
                    <TextField fx:id="cycle" prefWidth="25" prefHeight="15"/>
                </HBox>
                <TextArea text="Message for yourself!" fx:id="msg" prefWidth="200" prefHeight="200"/>
                <Button fx:id="save" text="Save" onAction="#saveSet"/>
            </VBox>
        </right>

</BorderPane>